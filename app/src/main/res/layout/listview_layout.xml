            android:textSize="30dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="-52dp"
            android:layout_marginTop="62dp"
            android:fontFamily="ha"
